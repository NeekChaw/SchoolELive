<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xiaoyu.elive">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.xiaoyu.elive.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.xiaoyu.elive.activities.RegistActivity" />
        <activity android:name="com.xiaoyu.elive.activities.UserCenterActivity" />
        <activity android:name="com.xiaoyu.elive.activities.AlbumActivity" />
        <activity android:name="com.xiaoyu.elive.activities.AlbumImageDetailActivity" />
        <activity android:name=".activities.PhotoActivity" />

        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        <uses-permission android:name="android.permission.WRITE_SETTINGS" />
        <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

        <uses-feature
            android:name="android.hardware.camera2"
            android:required="true" />
    </application>

</manifest>