<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1">

    <!--Top bar-->
    <include layout="@layout/custom_top_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100px"
        android:text="我的动态"
        android:textColor="#ffffff"
        android:textSize="50px"
        android:textStyle="bold" />
    <com.xiaoyu.elive.custom.CircleImageView
        android:id="@+id/head_dw"
        android:layout_marginTop="25dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/dw_1"
        app:civ_border_color="@color/light"
        app:civ_border_width="2dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称：" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NeekChaw_" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个性签名：" />

        <TextView
            android:id="@+id/personsign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="代码狗正在夜以继日的敲代码" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_marginTop="5px"
        android:background="@drawable/seg_cut_line" />

    <com.xiaoyu.elive.custom.User_Msg_Words
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.09"
        app:comment_count="99"
        app:comment_icon="@drawable/comment_icon"
        app:icon_msg="@drawable/all_back_sel"
        app:like_count="136"
        app:like_icon="@drawable/like_icon"
        app:msg_date="16:34"
        app:msg_day="06"
        app:msg_month="07月"
        app:msg_type="#个人中心#"
        app:msg_year="2017年"
        app:words_msg="这是校园e生活的第一条动态这是校园e生活的第一条动态这是校园e生活的第一条动态这是校园e生活的第一条动态"
        app:zhuanfa_count="145"
        app:zhuanfa_icon="@drawable/zhuanfa_icon"></com.xiaoyu.elive.custom.User_Msg_Words>


</LinearLayout>